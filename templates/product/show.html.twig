{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block body %}
    <h1>{{ product.name }}</h1>

    <div class="row">
        <div class="col-md-6">
            {% if product.image %}
                <img src="{{ asset('uploads/images/' ~ product.image) }}" class="img-fluid" alt="{{ product.name }}">
            {% else %}
                <img src="{{ asset('images/placeholder.jpg') }}" class="img-fluid" alt="Placeholder">
            {% endif %}
        </div>
        <div class="col-md-6">
            <p><strong>Prix :</strong> {{ product.price }} €</p>
            <p><strong>Description :</strong> {{ product.description }}</p>
            <p><strong>Stock :</strong> {{ product.stock }} unités</p>
            <p><strong>Catégorie :</strong> {{ product.category ? product.category.name : 'Aucune' }}</p>

            {% if product.stock > 0 %}
                <form action="{{ path('app_cart_add', {'id': product.id}) }}" method="post" class="mt-3">
                    <div class="input-group w-50">
                        <input type="number" name="quantity" value="1" min="1" max="{{ product.stock }}" class="form-control">
                        <button type="submit" class="btn btn-success">Ajouter au panier</button>
                    </div>
                </form>
            {% else %}
                <p class="text-danger">Produit en rupture de stock.</p>
            {% endif %}
        </div>
    </div>
{% endblock %}