{% extends 'base.html.twig' %}

{% block title %}Modifier le produit{% endblock %}

{% block body %}
    <style>
        /* Style global */
        .edit-product-container {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            min-height: 100vh;
            padding: 40px 0;
        }

        /* Titre */
        .edit-product-title {
            color: #004085;
            text-align: center;
            margin-bottom: 40px;
            font-weight: 600;
            position: relative;
            padding-bottom: 15px;
        }

        .edit-product-title:after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 100px;
            height: 3px;
            background: linear-gradient(90deg, #66b0ff 0%, #004085 100%);
        }

        /* Formulaire */
        .product-form {
            background: white;
            border-radius: 10px;
            padding: 30px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            max-width: 800px;
            margin: 0 auto;
            border: 1px solid #4dabf7;
        }

        .form-group {
            margin-bottom: 25px;
        }

        .form-label {
            color: #004085;
            font-weight: 500;
            margin-bottom: 8px;
        }

        .form-control {
            border: 2px solid #4dabf7;
            border-radius: 8px;
            padding: 12px 15px;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            border-color: #0052cc;
            box-shadow: 0 0 0 0.25rem rgba(0, 82, 204, 0.25);
        }

        /* Boutons */
        .btn-submit {
            background: linear-gradient(90deg, #28a745 0%, #218838 100%);
            color: white;
            border: none;
            padding: 12px 30px;
            border-radius: 8px;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .btn-submit:hover {
            background: linear-gradient(90deg, #218838 0%, #1e7e34 100%);
            transform: translateY(-2px);
        }

        .btn-back {
            background: linear-gradient(90deg, #4dabf7 0%, #0052cc 100%);
            color: white;
            border: none;
            padding: 12px 30px;
            border-radius: 8px;
            transition: all 0.3s ease;
        }

        .btn-back:hover {
            background: linear-gradient(90deg, #3a9cf5 0%, #004085 100%);
            color: white;
            transform: translateY(-2px);
        }

        /* Image preview */
        .image-preview {
            max-width: 200px;
            max-height: 200px;
            margin-top: 15px;
            border-radius: 8px;
            border: 2px solid #dee2e6;
            display: block;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .edit-product-container {
                padding: 30px 15px;
            }

            .product-form {
                padding: 20px;
            }

            .button-group {
                flex-direction: column;
                gap: 15px !important;
            }

            .btn-submit, .btn-back {
                width: 100%;
            }
        }
    </style>

    <div class="edit-product-container">
        <div class="container">
            <h1 class="edit-product-title">Modifier le produit : {{ product.name }}</h1>

            <div class="product-form">
                {{ form_start(form) }}

                <div class="form-group">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 5}}) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.price) }}
                    <div class="input-group">
                        {{ form_widget(form.price, {'attr': {'class': 'form-control'}}) }}
                        <span class="input-group-text">â‚¬</span>
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.stock) }}
                    {{ form_widget(form.stock, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.category) }}
                    {{ form_widget(form.category, {'attr': {'class': 'form-control'}}) }}
                </div>

                {% if form.image is defined %}
                    <div class="form-group">
                        {{ form_label(form.image) }}
                        {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                        {% if product.image %}
                            <img src="{{ asset('uploads/images/' ~ product.image) }}" class="image-preview mt-2" alt="Image actuelle">
                        {% endif %}
                    </div>
                {% endif %}

                <div class="d-flex justify-content-between button-group mt-4">
                    <a href="{{ path('app_product_index') }}" class="btn btn-back">
                        <i class="fas fa-arrow-left me-2"></i>Retour
                    </a>
                    <button type="submit" class="btn btn-submit">
                        <i class="fas fa-save me-2"></i>Enregistrer
                    </button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}