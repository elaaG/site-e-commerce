{% extends 'base.html.twig' %}

{% block title %}{% if form.vars.data.id %}Modifier{% else %}Ajouter{% endif %} un produit{% endblock %}

{% block body %}
    <h1>{% if form.vars.data.id %}Modifier{% else %}Ajouter{% endif %} un produit</h1>

    {{ form_start(form) }}
    <div class="mb-3">
        {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="mb-3">
        {{ form_row(form.description, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="mb-3">
        {{ form_row(form.price, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="mb-3">
        {{ form_row(form.stock, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="mb-3">
        {{ form_row(form.category, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="mb-3">
        {{ form_row(form.imageFile, {'attr': {'class': 'form-control'}}) }}
    </div>
    <button type="submit" class="btn btn-primary">Enregistrer</button>
    {{ form_end(form) }}

    <a href="{{ path('app_product_index') }}" class="btn btn-secondary mt-3">Retour Ã  la liste</a>
{% endblock %}