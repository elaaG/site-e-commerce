{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <style>
        /* Blue gradient background for the container */
        .register-container {
            background: linear-gradient(135deg, #a1c4fd 0%, #0052cc 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        /* Card styling with a subtle blue tint */
        .register-card {
            background: #ffffff;
            border: 1px solid #4dabf7;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 82, 204, 0.2);
            max-width: 500px;
            width: 100%;
        }

        /* Form control styling with blue focus */
        .form-control {
            border-color: #66b0ff;
            transition: border-color 0.3s ease;
        }

        .form-control:focus {
            border-color: #0052cc;
            box-shadow: 0 0 5px rgba(0, 82, 204, 0.5);
        }

        /* Ensure all form fields have the same width */
        .form-control {
            width: 100%;
        }

        /* Button with blue gradient */
        .btn-register {
            background: linear-gradient(90deg, #4dabf7 0%, #0052cc 100%);
            border: none;
            color: white;
            padding: 10px 20px;
            font-weight: 600;
            transition: transform 0.2s ease;
        }

        .btn-register:hover {
            transform: translateY(-2px);
            background: linear-gradient(90deg, #66b0ff 0%, #003d99 100%);
        }

        /* Login link styling */
        .login-link a {
            color: #0052cc;
            font-weight: 500;
        }

        .login-link a:hover {
            color: #003d99;
            text-decoration: underline;
        }

        /* Label styling */
        label {
            color: #004085;
            font-weight: 500;
        }

        /* Responsive adjustments */
        @media (max-width: 576px) {
            .register-card {
                margin: 10px;
            }
        }
    </style>

    <div class="register-container">
        <div class="register-card p-4">
            <h1 class="text-center mb-4" style="color: #004085;">Inscription</h1>

            {{ form_start(form) }}
            <div class="mb-3">
                {{ form_row(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Entrez votre email'}}) }}
            </div>
            <div class="mb-3">
                {# Customize the plainPassword field, which is a RepeatedType with two subfields #}
                {{ form_label(form.plainPassword.first) }}
                {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder': 'Entrez votre mot de passe'}}) }}
                {{ form_errors(form.plainPassword.first) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.plainPassword.second) }}
                {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder': 'Confirmez votre mot de passe'}}) }}
                {{ form_errors(form.plainPassword.second) }}
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-register">S'inscrire</button>
            </div>
            {{ form_end(form) }}

            <p class="mt-3 text-center login-link">
                Déjà un compte ? <a href="{{ path('app_login') }}">Connectez-vous</a>
            </p>
        </div>
    </div>
{% endblock %}