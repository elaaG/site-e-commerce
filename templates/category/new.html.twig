{% extends 'base.html.twig' %}

{% block title %}Ajouter une Catégorie{% endblock %}

{% block body %}
    <style>
        /* Blue gradient background for the container */
        .form-container {
            background: linear-gradient(135deg, #a1c4fd 0%, #0052cc 100%);
            min-height: 100vh;
            padding: 20px;
        }

        /* Card styling for the form */
        .form-card {
            background: #ffffff;
            border: 1px solid #4dabf7;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 82, 204, 0.2);
            padding: 30px;
            margin: 0 auto;
            max-width: 600px;
        }

        /* Header styling */
        h1 {
            color: #004085;
            text-align: center;
            margin-bottom: 30px;
        }

        /* Form input styling - version orange comme dans l'original */
        .custom-input {
            border: 2px solid #ff4500;
            border-radius: 5px;
            padding: 10px 15px;
            font-size: 16px;
            width: 100%;
            transition: all 0.3s ease;
        }

        .custom-input:focus {
            border-color: #e03a00;
            box-shadow: 0 0 0 0.25rem rgba(255, 69, 0, 0.25);
        }

        /* Label styling */
        .form-label {
            color: #004085;
            font-weight: 500;
            margin-bottom: 8px;
            display: block;
        }

        /* Submit button vert comme demandé */
        .custom-button {
            background-color: #28a745; /* Vert */
            color: white;
            border: none;
            padding: 10px 25px;
            border-radius: 5px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .custom-button:hover {
            background-color: #218838; /* Vert plus foncé */
            transform: translateY(-2px);
        }

        /* Cancel button bleu pour correspondre au thème */
        .btn-cancel {
            background: #4dabf7;
            color: white;
            border: none;
            padding: 10px 25px;
            border-radius: 5px;
            transition: all 0.3s ease;
        }

        .btn-cancel:hover {
            background: #0052cc;
            color: white;
        }

        /* Form errors */
        .invalid-feedback {
            color: #dc3545;
            margin-top: 5px;
        }

        /* Responsive adjustments */
        @media (max-width: 576px) {
            .form-card {
                padding: 20px;
                margin: 10px;
            }

            .d-flex {
                flex-direction: column;
                gap: 10px;
            }

            .custom-button, .btn-cancel {
                width: 100%;
            }
        }
    </style>

    <div class="form-container">
        <div class="form-card">
            <h1>Ajouter une Catégorie</h1>

            {{ form_start(form) }}
            <div class="mb-4">
                {{ form_label(form.name, 'Nom de la catégorie', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.name, {'attr': {'class': 'custom-input'}}) }}
                {{ form_errors(form.name) }}
            </div>

            <div class="d-flex gap-3">
                {{ form_widget(form.save, {'attr': {'class': 'custom-button'}, 'label': 'Enregistrer'}) }}
                <a href="{{ path('app_category_index') }}" class="btn btn-cancel">Annuler</a>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}