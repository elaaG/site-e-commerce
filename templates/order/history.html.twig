{% extends 'base.html.twig' %}

{% block title %}Mes commandes{% endblock %}

{% block body %}
    <h1>Mes commandes</h1>

    {% if orders is empty %}
        <p>Vous n'avez pas encore passé de commande.</p>
    {% else %}
        <table class="table">
            <thead>
            <tr>
                <th>Date</th>
                <th>Total</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for order in orders %}
                <tr>
                    <td>{{ order.createdAt|date('d/m/Y H:i') }}</td>
                    <td>{{ order.total }} €</td>
                    <td>
                        <a href="{{ path('app_order_show', {'id': order.id}) }}" class="btn btn-sm btn-primary">Détails</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}