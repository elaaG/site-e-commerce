{% extends 'base.html.twig' %}

{% block title %}Votre Panier{% endblock %}

{% block body %}
    <h1>Votre Panier</h1>

    {% for flash_message in app.flashes('success') %}
        <div class="alert alert-success" role="alert">
            {{ flash_message }}
        </div>
    {% endfor %}
    {% for flash_message in app.flashes('danger') %}
        <div class="alert alert-danger" role="alert">
            {{ flash_message }}
        </div>
    {% endfor %}

    {% if cartItems is empty %}
        <p class="alert alert-info">Votre panier est vide.</p>
        <a href="{{ path('app_product_index') }}" class="btn btn-primary">Retourner aux produits</a>
    {% else %}
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
            <tr>
                <th scope="col">Produit</th>
                <th scope="col">Prix unitaire</th>
                <th scope="col">Quantité</th>
                <th scope="col">Sous-total</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for item in cartItems %}
                <tr>
                    <td>{{ item.product.name|default('Produit inconnu') }}</td>
                    <td>{{ item.product.price|default('N/A') }} €</td>
                    <td>
                        <div class="d-flex align-items-center">
                            <a href="{{ path('app_cart_update', {'id': item.product.id, 'quantity': item.quantity - 1}) }}"
                               class="btn btn-sm btn-secondary me-2">-</a>
                            <span>{{ item.quantity }}</span>
                            <a href="{{ path('app_cart_update', {'id': item.product.id, 'quantity': item.quantity + 1}) }}"
                               class="btn btn-sm btn-secondary ms-2">+</a>
                        </div>
                    </td>
                    <td>{{ item.subtotal }} €</td>
                    <td>
                        <a href="{{ path('app_cart_remove', {'id': item.product.id}) }}"
                           class="btn btn-sm btn-danger">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
            <tfoot>
            <tr>
                <td colspan="3" class="text-end"><strong>Total :</strong></td>
                <td><strong>{{ total }} €</strong></td>
                <td>
                    <a href="{{ path('app_cart_clear') }}"
                       class="btn btn-sm btn-warning">Vider le panier</a>
                </td>
            </tr>
            </tfoot>
        </table>

        <div class="d-flex justify-content-between mt-4">

            <a href="{{ path('app_checkout') }}" class="btn btn-success">Passer la commande</a>
        </div>
    {% endif %}
{% endblock %}